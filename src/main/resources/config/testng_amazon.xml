<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Amazon Demo Suite" verbose="0" parallel="tests"
       thread-count="10">
    <listeners>
        <listener class-name="com.quantum.listeners.QuantumReportiumListener" />
    </listeners>

    <test name="Web Scenarios Android Test" enabled="true"
          thread-count="10">
        <parameter name="driver.capabilities.model" value="Galaxy.*"></parameter>
        <parameter name="env.resources" value="src/main/resources/android"/>
        <groups>
            <run>
                <include name="@amazonWeb" />
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
        </classes>
    </test>
    <test name="Web Scenarios iOS Test" enabled="true"
          thread-count="10">
        <parameter name="driver.capabilities.model" value="iPhone.*"></parameter>
        <parameter name="env.resources" value="src/main/resources/ios"/>
        <parameter name="perfecto.capabilities.browserName" value="Safari"></parameter>
        <groups>
            <run>
                <include name="@amazonWeb" />
            </run>
        </groups>
        <classes>
            <class name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
        </classes>
    </test>
</suite>
